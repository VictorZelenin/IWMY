<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/main_color"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/accent_color"
        android:layout_height="@dimen/toolbar_height"
        android:layout_width="match_parent">

        <include layout="@layout/image_button_toolbar_options"/>

        <TextView
            android:id="@+id/label_user"
            android:text="@string/toolbar_user"
            android:textSize="@dimen/toolbar_text_size"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

            <include layout="@layout/image_button_toolbar_settings"/>

        </RelativeLayout>

    </android.support.v7.widget.Toolbar>

    <include layout="@layout/progress_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/photo"
                android:src="@drawable/no_photo_man"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/label_name_and_surname"
                android:text="@string/label_name_and_surname"
                android:textSize="@dimen/label_text_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/label_gender"
                android:text="@string/label_gender"
                android:textSize="@dimen/label_text_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/label_birth_date"
                android:text="@string/label_birth_date"
                android:textSize="@dimen/label_text_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/label_city"
                android:text="@string/label_city"
                android:textSize="@dimen/label_text_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/label_country"
                android:text="@string/label_country"
                android:textSize="@dimen/label_text_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/label_email"
                android:text="@string/label_email"
                android:textSize="@dimen/label_text_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/label_phone"
                android:text="@string/label_phone"
                android:textSize="@dimen/label_text_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
