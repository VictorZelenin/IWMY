<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/light_blue"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_user_pic_1"
            android:src="@drawable/no_photo"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/event_pic_preview_size"
            android:layout_height="@dimen/event_pic_preview_size" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginStart="@dimen/label_margin"
            android:layout_marginLeft="@dimen/label_margin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/label_user_name_1"
                android:text="@string/label_user_name"
                android:textSize="@dimen/label_text_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/label_user_age_1"
                android:text="@string/label_user_age"
                android:textSize="@dimen/label_text_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_user_pic_2"
            android:src="@drawable/no_photo"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/event_pic_preview_size"
            android:layout_height="@dimen/event_pic_preview_size" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginStart="@dimen/label_margin"
            android:layout_marginLeft="@dimen/label_margin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/label_user_name_2"
                android:text="@string/label_user_name"
                android:textSize="@dimen/label_text_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/label_user_age_2"
                android:text="@string/label_user_age"
                android:textSize="@dimen/label_text_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
