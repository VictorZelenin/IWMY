<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/list_spacer_height_overlap"
    android:longClickable="true">

    <include layout="@layout/linear_layout_list_spacer"/>

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/photo"
            android:src="@drawable/no_photo_man"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/image_preview_size"
            android:layout_height="@dimen/image_preview_size" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/label_margin"
            android:layout_marginLeft="@dimen/label_margin"
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/label_user_name"
                android:text="@string/label_user_name"
                android:gravity="center_vertical"
                android:textSize="@dimen/label_text_size"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/label_user_age"
                android:text="@string/label_user_age"
                android:gravity="center_vertical"
                android:textSize="@dimen/label_text_size"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/label_user_location"
                android:text="@string/label_user_location"
                android:gravity="center_vertical"
                android:textSize="@dimen/label_text_size"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/linear_layout_list_spacer"/>

</LinearLayout>
