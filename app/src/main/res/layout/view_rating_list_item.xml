<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/list_spacer_height_overlap">

    <include layout="@layout/linear_layout_list_spacer"/>

    <LinearLayout
        android:background="@color/main_color"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/label_number"
            android:text="@string/label_number"
            android:layout_weight="@integer/label_number_relative_width"
            android:gravity="center_vertical"
            android:textSize="@dimen/label_text_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/label_rating_username"
            android:text="@string/label_rating_username"
            android:layout_weight="@integer/label_username_relative_width"
            android:gravity="center_vertical"
            android:textSize="@dimen/label_text_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/checkbox_selection"
            android:layout_weight="@integer/label_selection_relative_width"
            android:gravity="center_vertical"
            android:textSize="@dimen/label_text_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/input_comment"
            android:layout_weight="@integer/label_comment_relative_width"
            android:gravity="center_vertical"
            android:textSize="@dimen/label_text_size"
            android:inputType="textMultiLine"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:maxLength="@integer/edit_text_max_length"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <include layout="@layout/linear_layout_list_spacer"/>

</LinearLayout>
