<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/light_blue"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:background="@color/blue"
        android:layout_height="wrap_content"
        android:layout_width="match_parent" >

        <ImageView
            android:src="@drawable/logo"
            android:background="@android:color/transparent"
            android:paddingRight="@dimen/margin"
            android:paddingTop="@dimen/margin"
            android:paddingBottom="@dimen/margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/toolbar_questionnaires"
            android:text="@string/toolbar_questionnaires"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/toolbar_text_size"
            android:textColor="@color/white"/>

    </android.support.v7.widget.Toolbar>

    <Button
        android:id="@+id/button_add_questionnaire"
        android:text="@string/button_add_questionnaire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/events_pager"
            android:layout_above="@+id/button_send_questionnaires"
            android:layout_width="match_parent"
            android:layout_height="fill_parent">

            <android.support.v4.view.PagerTabStrip
                android:id="@+id/pager_tap_strip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/white"
                android:textAppearance="@style/pager_tab_strip_text"
                android:paddingTop="4dp"
                android:paddingBottom="4dp" />

            <LinearLayout
                android:id="@+id/page_users_guys"
                android:tag="@string/tab_guys"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical" >

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/user_list_holder_guys"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent" />

                </LinearLayout>

            <LinearLayout
                android:id="@+id/page_users_ladies"
                android:tag="@string/tab_ladies"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/user_list_holder_ladies"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent" />

                </LinearLayout>

        </android.support.v4.view.ViewPager>

        <Button
            android:id="@+id/button_send_questionnaires"
            android:text="@string/button_send_questionnaires"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</LinearLayout>
