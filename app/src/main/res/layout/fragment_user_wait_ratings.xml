<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/main_color"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/label_wait_for_result"
        android:textSize="@dimen/label_text_size"
        android:paddingTop="@dimen/margin"
        android:paddingBottom="@dimen/margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <pl.droidsonroids.gif.GifImageView
        android:src="@drawable/loading_animated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/label_questionnaires"
        android:textSize="@dimen/label_text_size"
        android:paddingTop="@dimen/margin"
        android:paddingBottom="@dimen/margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/label_progress"
        android:text="@string/label_progress"
        android:textSize="@dimen/label_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/label_calculating"
        android:textSize="@dimen/label_text_size"
        android:paddingTop="@dimen/margin"
        android:paddingBottom="@dimen/margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
