<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/accent_color"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingLeft="@dimen/margin"
    android:paddingRight="@dimen/margin"
    android:paddingTop="@dimen/margin"
    android:paddingBottom="@dimen/margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="@string/app_title"
        android:textSize="@dimen/start_title_text_size"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:src="@drawable/logo_big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_login"
        android:text="@string/button_login"
        android:layout_marginLeft="@dimen/start_screen_button_margin"
        android:layout_marginStart="@dimen/start_screen_button_margin"
        android:layout_marginRight="@dimen/start_screen_button_margin"
        android:layout_marginEnd="@dimen/start_screen_button_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_register"
        android:text="@string/button_register"
        android:layout_marginLeft="@dimen/start_screen_button_margin"
        android:layout_marginStart="@dimen/start_screen_button_margin"
        android:layout_marginRight="@dimen/start_screen_button_margin"
        android:layout_marginEnd="@dimen/start_screen_button_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

