<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/main_color"
    android:gravity="center_horizontal"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:longClickable="true">

    <ImageView
        android:id="@+id/photo"
        android:src="@drawable/no_photo"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_width="@dimen/image_preview_size"
        android:layout_height="@dimen/image_preview_size" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginStart="@dimen/label_margin"
        android:layout_marginLeft="@dimen/label_margin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/label_event_organizer_and_place"
            android:text="@string/label_event_organizer_and_place"
            android:textSize="@dimen/label_text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/label_event_time"
            android:text="@string/label_event_time"
            android:textSize="@dimen/label_text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>
